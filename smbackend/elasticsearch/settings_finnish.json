{
    "analysis": {
        "analyzer": {
            "default": {
                "tokenizer": "finnish",
                "filter": ["lowercase", "voikko_filter"]
            },
            "autosuggest_query": {
                "tokenizer": "finnish",
                "filter": ["lowercase", "voikko_filter", "autosuggest_truncate"],
                "type": "custom"
            },
            "edgengram_analyzer": {
                "filter": [
                    "lowercase", "voikko_filter", "haystack_edgengram"],
                "tokenizer": "finnish",
                "type": "custom"
            }
        },
        "filter": {
            "voikko_filter": {
                "type": "voikko",
                "expandCompounds": true
            },
            "autosuggest_truncate": {
                "type": "truncate",
                "length": 15
            },
            "haystack_edgengram": {
                "max_gram": "15",
                "min_gram": "1",
                "side": "front",
                "type": "edgeNGram"
            }
        }
    }
}
