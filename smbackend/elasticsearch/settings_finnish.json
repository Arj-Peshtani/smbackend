{
    "analysis": {
        "analyzer": {
            "default": {
                "tokenizer": "finnish",
                "filter": ["lowercase", "voikko_filter"]
            },
            "autosuggest_query": {
                "tokenizer": "finnish",
                "filter": ["lowercase", "autosuggest_truncate"]
            },
            "edgengram_analyzer": {
                "filter": [
                    "lowercase"
                ],
                "tokenizer": "servicemap_edgengram_tokenizer",
                "type": "custom"
            }
        },
        "filter": {
            "voikko_filter": {
                "type": "voikko",
                "expandCompounds": true
            },
            "autosuggest_truncate": {
                "type": "truncate",
                "length": 15
            },
            "haystack_edgengram": {
                "max_gram": "15",
                "min_gram": "1",
                "type": "edgeNGram"
            }
        },
        "tokenizer": {
            "servicemap_edgengram_tokenizer": {
                "max_gram": "15",
                "min_gram": "1",
                "side": "front",
                "type": "edgeNGram",
                "token_chars": [ "letter", "digit" ]
            }
        }
    }
}
